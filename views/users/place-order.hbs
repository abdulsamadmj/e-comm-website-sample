<div class="container">
    <div class="row">
        <div class="col-md-12 pt-5">
        <h2>Enter Delivery Details</h2>
        <form>
            <div class="form-group col-md-5 pt-4">
                <label for="address">Address</label>
                <input type="text" class="form-control" id="address" name="address">
                <label for="pincode">Pincode</label>
                <input type="text" class="form-control" id="pincode" name="pincode">
                <label for="mobile">Mobile</label>
                <input type="text" class="form-control" id="mobile" name="mobile">
            </div>
            <div class="form-group col-md-6">
                <h4>Total Amount: Rs.{{total}}/-</h4>
                <hr>
                <label for="paymethod">Payment Method</label><br>
                <input type="radio" name="paymethod" id="cod" value="COD">
                <label for="cod">COD</label><br>
                <input type="radio" name="paymethod" id="online" value="Internet Banking">
                <label for="online">Internet Banking</label><br>
                <button type="submit" class="btn btn-primary float-right">Checkout</button>
            </div>
            
        </form>
        </div>
    </div>
</div>